<%# app/views/department/assignment.html.erb %>
<div class="Page-Area">
    <%= link_to(root_path) do %>
    <div class="Back-Link-Area">
      <div class="Back-Link-Icon">
        <span class="material-icons-outlined">
        door_back
        </span>
      </div>
      <div class="Back-Link-Text">
      ホームへ戻る
      </div>
    </div>
    <% end %>
  <div class="Page-Title">
  所属プリセット一括登録
  </div>
  <div class="Page-Text">
  所属プリセットをユーザーに一括で登録することができます。
  </div>
  <div class="Dashboard-DoubleGroup-w">
    <div class="Dashboard-Contents">
        <%= form_with(model: @profile, url: profile_dept_designation_path) do |f| %>
        <div class="form-group">

        <div class="form-group">
          <%= f.label "所属プリセット" %>
          <%= f.collection_select :dept_id, Department.all, :id, :view_department_and_position, :prompt => "所属プリセットを選択", class: 'form-control' %>
        </div>

    <div class="form-group">  
        <%= f.submit('会員選択へ進む', {class: 'btn-action'}) %>
    </div>
    <% end %>

    </div>
    <div class="Dashboard-Contents">


    </div>
  </div>
</div>