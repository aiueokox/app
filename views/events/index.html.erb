<div class="Page-Area">
  <%= link_to(recruit_path) do %>
    <div class="Back-Link-Area d-flex align-items-center">
      <div class="Back-Link-Icon mr-2">
        <span class="material-icons-outlined">
        undo
        </span>
      </div>
      <div class="Back-Link-Text">
      人事管理へ戻る
      </div>
    </div>
  <% end %>

  <h2 class="Page-Title mt-4 mb-3">
    イベントリスト
  </h2>

  <p class="Page-Text mb-4">
    登録されているイベントを一覧で確認することが可能です。
  </p>

  <div class="DashBoard">
    <table class="table table-striped">
      <thead>
        <tr>
        <th>イベントタイトル</th>
        <th>開始日時</th>
        <th>終了日時</th>
        <th>イベント参加人数</th>
        <th colspan="3">操作</th>
        </tr>
      </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_date_time.strftime('%Y年%m月%d日 %H:%M') %></td>
        <td><%= event.end_date_time.strftime('%Y年%m月%d日 %H:%M') %></td>
        <td><%= event.event_participants.count %></td>
        <td><%= link_to '詳細', event, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to '編集', edit_event_path(event), class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to '削除', event, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
    </table>
  </div>
</div>
