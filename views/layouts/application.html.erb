<!DOCTYPE html>
<html>
  <head>
    <title>ACTION | サークル活動支援サービス</title>
    <%= favicon_link_tag('favicon.ico') %>
    <%= favicon_link_tag 'xxxx180x180.png', rel: 'apple-touch-icon', sizes: '180x180', type: 'image/png' %>
    <%= favicon_link_tag 'xxxx192x192.png', rel: 'android-touch-icon', sizes: '192x192', type: 'image/png' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <% unless controller_name == "print"%>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%else%>
    <%= stylesheet_link_tag 'print', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons', media: 'all' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons%7CMaterial+Icons+Outlined', media: 'all' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200', media: 'all' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0', media: 'all' %>
    
  </head>
  <% unless controller_name == "print"%>
    <body>
      <% unless current_page?(attendance_auto_path) || current_page?(attendance_error_path) || controller_name == "print"%>
        <%= render 'users/shared/header' %>
      <% end %>
      <%= render 'users/shared/flash_messages' %>
      <%= yield %>
    </body>
  <% else %>
    <body class="printArea A">
      <%= yield %>
    </body>
  <% end %>
</html>